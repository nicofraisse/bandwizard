<div style="display: flex; width: 100%; justify-content: center;">
  <h2 style="color: white; position: absolute; top: 0px; margin: 0 auto; z-index: 3000000000; text-align: center; width: 75%;">
  </h2>
</div>

<div class="message-list margin">
  <% if @conversation.messages.any? %>
    <div class="" id="messages">
      <%= render partial: 'messages/message', collection: @conversation.messages %>
    </div>
  <%else%>
    <div class="panel-body hidden" id="messages">
    </div>
  <%end%>
</div>

<div class="write-message margin">
  <%= render partial: 'messages/message_form', locals: {message: @message, conversation: @conversation}%>
</div>


