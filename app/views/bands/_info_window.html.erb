
  <%= link_to(cl_image_tag(result.band_photos.first.photo, class: "bandphoto", style: "width: 100%; height: 20vh; object-fit: cover; border-radius"), band_path(result)) %>
  <div class="card-band-infos">
    <!-- checkbox for stars -->
  <% unless current_user.nil? %>
    <%= button_to stars_path(result), method: :post, id:"favorite_link-#{result.id}",remote:true  do %>
      <% if result.favorited_by?(current_user) %>
        <i class="fas fa-star"></i>
      <% else %>
        <i class="far fa-star"></i>
      <% end %>
    <% end %>
  <% end %>
   <!-- checkbox for stars -->
    <p><strong><%= result.name %></strong></p>
    <li style="list-style-type:none;">
      <% result.styles.each_with_index do |style, i| %>
        <%= style.name %><%= i == result.styles.count - 1 ? "" : ", " %>
      <% end %>
    </li>
    <li style="color: red; list-style-type:none;">
      <% result.instruments.each do |instrument| %>
        <%= instrument.name %>
      <% end %>
    </li>
    <i class="fas fa-map-marker-alt"></i> <%= Geocoder::Calculations.distance_between([result.latitude, result.longitude], @geocoded_address).round(1) %> km
  </div>

